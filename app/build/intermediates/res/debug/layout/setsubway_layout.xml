<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:id="@+id/setsubway_layout"
    android:background="@drawable/subwaypage">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/linearLayout3">

    </LinearLayout>

    <ImageButton
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:id="@+id/subway_btn"
        android:background="@drawable/nextpress"
        android:layout_marginBottom="200dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


    <AutoCompleteTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subwayText"
        android:background="@drawable/locationtext"
        android:hint="타는 역을 입력해주세요."
        android:completionThreshold="2"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_above="@+id/subway_btn"
         android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"/>

</RelativeLayout><!-- From: file:/C:/Users/HyungJun/AndroidStudioProjects/StaggeredGridView-master/app/src/main/res/layout/setsubway_layout.xml -->