<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:gravity="center"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이곳에서 지하철을 수정하실 수 있습니다."
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal|top"
        android:textSize="20dp"/>

    <AutoCompleteTextView
        android:gravity="center"
        android:hint="지하철 역을 입력해주세요"
        android:layout_marginTop="40dp"
        android:background="@drawable/subwaytext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/subwayText1"
        android:completionThreshold="1"
        android:layout_gravity="center"
        android:textSize="20dp"/>


    <ImageButton
        android:layout_marginTop="40dp"
        android:text="쑤정!!꾸리쓰딸!!"
        android:background="@drawable/modifybutton"
        android:id="@+id/settingsubway_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"></ImageButton>


</LinearLayout>